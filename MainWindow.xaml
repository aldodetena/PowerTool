<Window x:Class="PowerTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PowerTool - Equipos del Dominio" Height="450" Width="600">
    <Grid>
        <!-- ListView para mostrar los equipos con iconos y botones -->
        <ListView Name="EquiposListView" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="550" Margin="10,10,10,100">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Equipo" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Icono del equipo -->
                                    <Image Source="icons/computer.png" Width="16" Height="16" Margin="0,0,10,0"/>
                                    <!-- Nombre del equipo -->
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <!-- Columna para otros detalles -->
                    <GridViewColumn Header="Sistema Operativo" DisplayMemberBinding="{Binding OperatingSystem}" Width="150"/>
                    <GridViewColumn Header="Versión SO" DisplayMemberBinding="{Binding OperatingSystemVersion}" Width="100"/>
                    
                    <!-- Columna para botones de acciones -->
                    <GridViewColumn Header="Acciones" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Botón para ejecutar scripts -->
                                    <Button Click="AbrirPopUpComando_Click" ToolTip="Enviar Script" Margin="0,0,10,0">
                                        <Image Source="icons/script.png" Width="16" Height="16"/>
                                    </Button>
                                    <!-- Botón para conexión remota -->
                                    <Button Click="ConectarRDPButton_Click" ToolTip="Conectar por RDP">
                                        <Image Source="icons/remote.png" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- StackPanel para organizar botones de acciones principales -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="Cerrar" Width="100" Height="30" Click="CerrarButton_Click" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
