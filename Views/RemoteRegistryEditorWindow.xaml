<Window x:Class="PowerTool.Views.RemoteRegistryEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor de Registro Remoto" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ListView para mostrar claves y valores del registro -->
        <ListView Name="RegistryListView" ItemsSource="{Binding RegistryEntries}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Clave" DisplayMemberBinding="{Binding Key}" Width="200"/>
                    <GridViewColumn Header="Valor" DisplayMemberBinding="{Binding Value}" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Botones de acciones para editar o eliminar valores -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Editar" Width="100" Margin="5" Click="EditRegistryEntry_Click"/>
            <Button Content="Eliminar" Width="100" Margin="5" Click="DeleteRegistryEntry_Click"/>
            <Button Content="Cerrar" Width="100" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
